.reviews {
  margin-bottom: 15%;
}

.reviews__title {
  display: flex;
}

.reviews__slider {
  display: flex;
justify-content: flex-start;
}

.reviews__slider-item {
  display: flex;
  width: 35%;
  margin-right: 3%;
  // justify-content: space-between;
  &:nth-child(2) {
